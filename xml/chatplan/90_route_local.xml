<extension name="forward_local">
    <condition field='${endaga_islocal}' expression="TRUE">
        <!-- action application="set" data="service_type=local_sms"/ -->
        <action application="python"
                data="VBTS_Send_SMS ${vbts_canonical_tp_dest_address}|${vbts_callerid}|${vbts_text}"/>
        <action application="system"
                data='curl -d "from_number=${vbts_callerid}&from_name=${from_imsi}&service_type=${service_type}&destination=${vbts_canonical_tp_dest_address}&tariff=${call_tariff}" http://127.0.0.1/smscdr'/>
        <action application="system"
                data='curl -d "imsi=${from_imsi}&trans=${service_type}&amount=1" http://127.0.0.1:7000/api/promo/deduct'/>
    </condition>
</extension>
